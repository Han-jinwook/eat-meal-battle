{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@meal-battle/ui": ["../../packages/ui/src"],
      "@meal-battle/ui/*": ["../../packages/ui/src/*"],
      "@meal-battle/auth": ["../../packages/auth/src"],
      "@meal-battle/auth/*": ["../../packages/auth/src/*"],
      "@meal-battle/utils": ["../../packages/utils/src"],
      "@meal-battle/utils/*": ["../../packages/utils/src/*"],
      "@meal-battle/types": ["../../packages/types/src"],
      "@meal-battle/types/*": ["../../packages/types/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
